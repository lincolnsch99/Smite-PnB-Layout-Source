<UserControl x:Class="Smite_PnB_Layout.TopBanDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Smite_PnB_Layout"
             mc:Ignorable="d" 
             x:Name="UserControlObject" d:DesignHeight="60" d:DesignWidth="60" SizeChanged="UserControl_SizeChanged">
    <Canvas x:Name="Canvas">
        <Image x:Name ="godImage" MaxHeight="109">
            <Image.Source>
                <BitmapImage UriSource=""></BitmapImage>
            </Image.Source>
        </Image>
        <Rectangle x:Name="rectang" Fill="#CC000000" Width="60" Height="20" Canvas.Bottom="0"/>
        <Label x:Name="percentText" FontSize="10" Width="60" Height="22" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Style="{StaticResource nameDesign}" Content="0%" Foreground="#FFF0F0F0" Canvas.Bottom="0"/>
    </Canvas>
</UserControl>
